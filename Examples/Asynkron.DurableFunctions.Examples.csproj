<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Asynkron.DurableFunctions" Version="0.0.3" />
        <ProjectReference Include="..\src\Asynkron.DurableFunctions.AzureAdapter\Asynkron.DurableFunctions.AzureAdapter.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2025.2.2"/>
        <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0"/>
        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0"/>
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0"/>
        <PackageReference Include="OpenTelemetry" Version="1.7.0" />
        <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.7.0" />
        <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" Version="1.7.0" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
        <!-- Exclude examples that use features not available in the public NuGet package -->
        <Compile Remove="ChaosEngineeringExample.cs" />
        <Compile Remove="FullFeaturedWebAppExample.cs" />
        <Compile Remove="MetricsExample.cs" />
        <Compile Remove="WebApiExample.cs" />
        <Compile Remove="WebApiPostgreSqlExample.cs" />
        <Compile Remove="PostgreSqlExample.cs" />
    </ItemGroup>

</Project>
